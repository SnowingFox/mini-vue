{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@mini-vue/shared": ["./packages/shared/src/index.ts"],
      "@mini-vue/reactivity": ["./packages/reactivity/src/index.ts"],
      "@mini-vue/runtime-core": ["./packages/runtime-core/src/index.ts"],
      "@mini-vue/playground": ["./packages/playground/src/index.ts"]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/test/dts/**"
  ]
}
